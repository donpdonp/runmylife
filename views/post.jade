extend layout
block content
  h2 
    | ActivityStream

  div
    | Hi, #{me}

  form(method="post")
    ul.verblist
      li#eat Eat
      li#spend Spend
    div.verbinput
      label
        | verb
        input(name="verb")
    div.verbinput
      label
        | object
        input(name="object")

    input(type="submit" value="Create Activity")

  div(style="margin-top: 1em")
    | Sample activitystream json
  pre
    | { "id": "02844b42-c51c-4852-8e64-347b1e38f280" ,
    |   "objectType": "activity"
    |   "verb": "checkin"
    |   "provider": "canary" ,
    |   "published": "2014-07-14T02:13:38-07:00" ,
    |   "object": {
    |          "name": "" ,
    |          "url": ""
    |       } 
    | }


  script.
    jQuery(function(){
      console.log("ready")
      $('li#eat').click(function(evt){doverb('eat')})
      $('li#spend').click(function(){doverb('spend')})
    })
    
    function doverb(verb) {
      $("input[name='verb']").val(verb)
      $("input[name='object']").focus()
    }

